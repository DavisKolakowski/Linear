{
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "14"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source={Secret}",
          "sinkOptionsSection": {
            "tableName": "LinearConflictServiceLogEvents",
            "autoCreateSqlTable": true,
            "useAzureManagedIdentity": false
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            }
          },
          "logEventFormatter": "LinearConflictService.Models.LogEventsFormatModel::Formatter, LinearConflictService"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source={Secret}",
          "sinkOptionsSection": {
            "tableName": "LinearConflictServiceDetailedLogEvents",
            "autoCreateSqlTable": true,
            "useAzureManagedIdentity": false
          },
          "restrictedToMinimumLevel": "Verbose",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            }
          },
          "logEventFormatter": "LinearConflictService.Models.LogEventsFormatModel::Formatter, LinearConflictService"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "LinearSQLDatabase": "Data Source={Secret}"
  },
  "AllowedHosts": "*"
}
