{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning"
    },
    "Debug": {
      "LogLevel": {
        "Default": "Trace"
      }
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor": "Error",
        "Default": "Information"
      }
    },
    "EventSource": {
      "LogLevel": {
        "Microsoft": "Debug"
      }
    },
    "EventLog": {
      "LogLevel": {
        "Microsoft": "Debug"
      }
    },
    "AzureAppServicesFile": {
      "IncludeScopes": true,
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "AzureAppServicesBlob": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft": "Information"
      }
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=",
          "sinkOptionsSection": {
            "tableName": "LinearUpdateDashboardDevLogEvents",
            "autoCreateSqlTable": true,
            "useAzureManagedIdentity": false
          },
          "restrictedToMinimumLevel": "Information",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            }
          },
          "logEventFormatter": "LinearUpdateDashboard.Models.LogEventsFormatModel::Formatter, LinearUpdateDashboard"
        }
      }
    ],
    "AuditTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=",
          "restrictedToMinimumLevel": "Information",
          "logEventFormatter": "LinearUpdateDashboard.Models.LogEventsFormatModel::Formatter, LinearUpdateDashboard",
          "sinkOptionsSection": {
            "tableName": "LinearUpdateDashboardDevLogEventsAudit",
            "autoCreateSqlTable": true,
            "useAzureManagedIdentity": false
          },
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ],
            "timeStamp": {
              "columnName": "Timestamp",
              "convertToUtc": false
            }
          }
        }
      }
    ]
  },
  "ConnectionStrings": {
    "LinearSQLDatabase": "Data Source="
  },
  "SpotStatusCheckerDirPaths": {
    "EastVaultFolderPrefix": "\\\\***client.cable.comcast.com\\Vault\\",
    "WestVaultFolderPrefix": "\\\\***client.cable.comcast.com\\Vault\\",
    "EastPrimaryMezzFolderPrefix": "\\\\***client.cable.comcast.com\\PrimaryMezz\\",
    "WestPrimaryMezzFolderPrefix": "\\\\***client.cable.comcast.com\\PrimaryMezz\\",
    "AlticeAssetsFolderPrefix": "\\\\***client.cable.comcast.com\\AsperaProxy\\Altice\\Assets\\",
    "SpectrumAssetsFolderPrefix": "\\\\***-po-1p.cable.comcast.com\\D_Drive\\CharterMedia\\Content\\",
    "FrontierEastAssetsFolderPrefix": "\\\\***client.cable.comcast.com\\Partners\\Assets\\",
    "FrontierWestAssetsFolderPrefix": "\\\\***client.cable.comcast.com\\Partners\\Assets\\"
  },
  "AllowedHosts": "*"
}
