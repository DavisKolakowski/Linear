    "EastPrimaryMezzFolderPrefix": "east\\PrimaryMezz\\",
    "WestPrimaryMezzFolderPrefix": "wst\\PrimaryMezz\\",
    "AlticeAssetsFolderPrefix": "\\AsperaProxy\\Altice\\Assets\\",
