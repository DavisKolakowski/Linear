    <script>
        $(document).ready(function () {
                var table = $('#SpotsInMarketDT').DataTable( {
                    dom: "<'row mb-3'<'col-sm-4'l><'col-sm-8 text-end'<'d-flex justify-content-end'B>>>t<'d-flex align-items-center'<'me-auto'i><'mb-0'p>>",
                    responsive: true,
                    select: true,
                    lengthMenu: [
                        [ 10, 30, 100, -1 ],
                        [ '10 rows', '30 rows', '100 rows', 'Show all' ]
                    ],
                    language: {
                      emptyTable: 'No Conflicts!'
                    },
                    buttons: [
                        { 
                            extend: 'copy',
                                exportOptions: 
                                { 
                                    columns: [ 0, ':selected' ]
                                },
                            title: null,
                            header: false,
                            className: 'btn btn-outline-default btn-sm'
                        },
                        { extend: 'excel', className: 'btn btn-outline-default btn-sm' },
                        { extend: 'pdf', className: 'btn btn-outline-default btn-sm' },
                        {
                            extend: 'spacer',
                            style: 'bar'
                        },
                        { extend: 'selectAll', className: 'btn btn-outline-default btn-sm' },
                        { extend: 'selectNone', className: 'btn btn-outline-default btn-sm' },
                        {
                            extend: 'searchBuilder',
                            className: 'btn btn-outline-default btn-sm',
                            config: {
                                depthLimit: 2
                            }
                        }
                    ],
                    columnDefs: [
                        { responsivePriority: 1, targets: 0 },
                        { responsivePriority: 2, targets: -1 }
                    ]
                });
           });
    </script>
}
<div id="datatable" class="mb-5">
        <table id="SpotsInMarketDT" class="table table-bordered text-nowrap w-100">
            <thead>
                <tr>
                    <th>
                        SPOT ID
                    </th>
                    <th>
                        TITLE
                    </th>
                    <th data-priority="2">
                        FIRST AIRTIME
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model.SpotsInMarket) {
                <tr>
                    <td>
                        @item.SpotCode
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.DistributionServerSpots?.OrderBy(dss=>dss.FirstAirDate)?.FirstOrDefault()?.FirstAirDate
                    </td>
                </tr>
        }
            </tbody>
            <tfoot>
                <tr>
                    <th>
                        SPOT ID
                    </th>
                    <th>
                        TITLE
                    </th>
                    <th>
                        FIRST AIRTIME
                    </th>
                </tr>
            </tfoot>
        </table>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
