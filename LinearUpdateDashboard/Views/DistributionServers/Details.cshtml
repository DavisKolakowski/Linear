@model LinearUpdateDashboard.ViewModels.Admin.DistributionServersDetailsViewModel


@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Distribution Server</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Server Identity
        </dt>
        <dd class = "col-sm-10">
            @Model.DistributionServer.ServerIdentity
        </dd>
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Server Path
        </dt>
        <dd class = "col-sm-10">
            @Model.DistributionServer.ServerFolder
        </dd>
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Headquarters
        </dt>
        <dd class = "col-sm-10" style="text-transform: uppercase;">
            @Model.DistributionServer.Headquarters.Name
        </dd>
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Last Modified
        </dt>
        <dd class = "col-sm-10">
            @Model.DistributionServer.LastUpdated
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DistributionServer.Id">Edit</a> |
    <a asp-action="Admin">Back to List</a>
</div>
