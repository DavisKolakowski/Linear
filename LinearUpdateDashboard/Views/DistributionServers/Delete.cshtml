@model LinearUpdateDashboard.Models.DistributionServer

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Distribution Server</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Server Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServerIdentity)
        </dd>
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Server Path
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServerFolder)
        </dd>
        <dt class = "col-sm-2" style="text-transform: uppercase;">
            Last Modified
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdated)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
