@model LinearUpdateDashboard.ViewModels.Admin.DistributionServersListViewModel

@{
    ViewData["Title"] = "Admin";
}

<h1>Distribution Server Admin</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead style="text-transform: uppercase;">
        <tr>
            <th>
                Headquarters
            </th>
            <th>
                Server Name
            </th>
            <th>
                Server Path
            </th>
            <th>
                Last Modified
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DistributionServers) {
        <tr>
            <td style="text-transform: uppercase;">
                @item.Headquarters.Name
            </td>
            <td>
                @item.ServerIdentity
            </td>
            <td>
                @item.ServerFolder
            </td>
            <td>
                @item.LastUpdated
            </td>
            <td style="text-transform: uppercase;">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
