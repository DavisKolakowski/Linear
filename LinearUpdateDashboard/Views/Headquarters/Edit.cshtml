@model LinearUpdateDashboard.ViewModels.Admin.HeadquartersEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Headquarters</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Headquarters.Id" />
            <div class="form-group">
                <label asp-for="Headquarters.Name" class="control-label">Headquarters Name</label>
                <input asp-for="Headquarters.Name" placeholder="@Model.Headquarters.Name" class="form-control" />
                <span asp-validation-for="Headquarters.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Headquarters.Markets" class="control-label">Markets</label>
                <select asp-for="SelectedMarketIds" 
                        asp-items="Model.MarketSelectListItems", class="form-control" style="text-transform: uppercase;">
                </select>
                <span asp-validation-for="Headquarters.Markets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary  mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Admin">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
