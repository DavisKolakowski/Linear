@model LinearUpdateDashboard.ViewModels.MarketDetailsAdminViewModel

@{
    ViewData["Title"] = "MarketDetails";
}

<h1>Details</h1>

<div>
    <h4>Market Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Market.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Market.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Market.LastUpdated)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Market.LastUpdated)
        </dd>
    </dl>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                HEADQUARTERS NAME
            </th>
            <th>
                DISTRIBUTION SERVERS
            </th>
            <th>
                LAST MODIFIED
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.HeadquartersInMarket) {
        <tr>
            <td style="text-transform: uppercase;">
                @item.Name
            </td>
            <td>
               @Model.MarketHeadquartersDistributionServersCount[item.Id]
            </td>
            <td>
                @item.LastUpdated
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="HeadquartersDetails" asp-route-name="@item.Name">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Add/Create New Headquarters</a>
</p>
<div>
    <a asp-action="Edit" asp-route-name="@Model.Market">Edit</a> |
    <a asp-action="Markets">Back to Market List</a>
</div>